<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="solutus.coronawatch.ui.firstActivity.StartFragment">

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:contentDescription="@string/first_image"
       android:scaleType="centerCrop"
       android:src="@drawable/first_image" />

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="140dp"

       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/start_button"
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:src="@mipmap/ic_start_button"
          android:layout_marginEnd="30dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintBottom_toBottomOf="@+id/imageView2"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">

      <ImageView
          android:id="@+id/empty_cercle"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginEnd="2dp"
          android:layout_marginBottom="10dp"
          android:src="@mipmap/ic_empty_cercle" />

      <ImageView
          android:id="@+id/red_cercle"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginBottom="10dp"
          android:layout_marginStart="2dp"

          android:src="@mipmap/ic_red_cercle" />

   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
